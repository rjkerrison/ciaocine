<section>
{{#with cinema}}
  <h2>Showtimes for {{name}}</h2>
  <p>
    {{address}},
    {{city}}
    {{zipcode}}
  </p>
  {{> favouriteCinema cinema=this liked=liked}}
  <ul>
    {{#each member_cards}}
      <li data-code='{{code}}'>
        {{label}}
      </li>
    {{/each}}
  </ul>
  <p>
    <a href='/cinema/{{_id}}/byDate'>
      View listings by date
    </a>
  </p>
{{/with}}

<div class='showtimes-grouping'>
  {{#each showtimes}}
    <div class='showtime-for-group'>
      <div class='group-heading'>
        <h3>
          {{movie.title}}
        </h3>
        <picture>
          <img src='{{movie.poster}}' alt='{{movie.title}}' />
        </picture>
      </div>
      <ul class='showtimes'>
        {{#each showtimes}}
          <li class='showtime'>
            <h3>
              {{date startTime}}
              at
              {{time startTime}}
            </h3>
            {{> addToCalendar showtime=this}}
          </li>
        {{/each}}
      </ul>
    </div>
  {{/each}}
</div>
</section>