{{#with cinema}}
  <h2>{{name}}</h2>
  {{allocine_id}}
  {{address}}
  {{zipcode}}
  {{city}}
  {{#each member_cards}}
    {{code}}
    {{label}}
  {{/each}}
{{/with}}

{{#each showtimes}}
  <p>
    {{movie.title}}
  </p>
  {{#each scr}}
    <p>
      {{d}}
      at
    </p>
    <ul class='showtimes'>
      {{#each t}}
        <li class='showtime'>
          <h3>
            {{this.$}}
          </h3>
          <button data-showtime='{{t.code}}'>
            Add this to your calendar
          </button>
        </li>
      {{/each}}
    </ul>
  {{/each}}
{{/each}}