<div class='movie-showtimes'>
  {{#ifGreaterThan showtimes.length 6}}
    {{#eachSlice ../showtimes 0 5}}
      {{> showtimeCard this=this showDate=../showDate}}
    {{/eachSlice}}
    {{#eachSlice ../showtimes 5 showtimes.length}}
      {{> showtimeCard this=this class='expanded-only' showDate=../showDate}}
    {{/eachSlice}}
    <div class="movie-showtime expander">
      Show more
    </div>
  {{else}}
    {{#each ../showtimes}}
      {{> showtimeCard this=this showDate=../showDate}}
    {{/each}}
  {{/ifGreaterThan}}
</div>